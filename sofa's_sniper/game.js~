import {loadAllImages} from './helpers/functions.js';
import {Game} from "./objects/Game.js";

const IMAGES = {
    "cross": "images/cross.png",
    "bottle": "images/bottle.png",
    "explosion": "images/explosion.png"
};

const canvas = document.getElementById("screen");
const menu = document.getElementById("menu");
const startButton = document.getElementById("start-game");
const recordDisplay = document.getElementById("record");

let record = localStorage.getItem('record') || 0;
recordDisplay.textContent = record;

loadAllImages(IMAGES).then(loadedImages => {
    console.log('Loaded images:', loadedImages);
    const game = new Game(canvas, loadedImages, (score) => {
        if (score > record) {
            record = score;
            localStorage.setItem('record', record);
            recordDisplay.textContent = record;
        }
        menu.style.display = 'flex';
    });

    startButton.addEventListener('click', () => {
        menu.style.display = 'none';
        game.start();
    });
}).catch(error => {
    console.error('Error loading images:', error);

    loadAllImages(IMAGES).then((loadedImages) => {
        console.log('Loaded images:', loadedImages); // Проверяем результат
        const game = new Game(canvas, loadedImages);
        startButton.addEventListener('click', () => {
            menu.style.display = 'none';
            game.start();
        });
    }).catch((error) => {
        console.error('Error loading images:', error);
    });
});
